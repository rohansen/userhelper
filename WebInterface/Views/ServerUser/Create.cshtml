@model UserHelperCL.Models.Student

@{
    ViewBag.Title = "Opret enkelt bruger";
}
<div class="well">
    <h2>Opret enkelt bruger</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">

            <div class="col-md-12">
                <div class="form-horizontal">
                    <h4>Student</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, "Navn", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control floating-label", @placeholder = "Brugerens fulde navn eg. Jens Asger Jensen." }, @autocomplete = "off" })

                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TeamId, "Hold", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(x => x.TeamId, (SelectList)ViewBag.Teams, new { @class = "form-control", @autocomplete = "off" })
                            <span class="help-block">Vælg det hold/den klasse brugeren skal tilknyttes.</span>
                            @Html.ValidationMessageFor(model => model.TeamId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Credentials.DatabaseUserName, "Brugernavn", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.Credentials.DatabaseUserName, new { @class = "form-control floating-label", @placeholder = "Indtast brugernavn til brugeren. Dette brugernavn bliver brugt til både FTP og Database", @autocomplete = "off" })
                            @Html.ValidationMessageFor(model => model.Credentials.DatabaseUserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Credentials.DatabasePassword, "Password", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.Credentials.DatabasePassword, new { @class = "form-control floating-label", @placeholder = "Indtast password til brugeren. Dette password bliver brugt til både FTP og Database" })
                            @Html.ValidationMessageFor(model => model.Credentials.DatabasePassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Credentials.WebsitePort, "Port", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(x => x.Credentials.WebsitePort, new { @class = "form-control floating-label", @placeholder = "Skriv website port. (Den næste port i rækken er valgt sat som standard i feltet)", @Value = ViewBag.StartPort, @autocomplete = "off" })

                            @Html.ValidationMessageFor(model => model.Credentials.WebsitePort, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.Credentials.WindowsUserGroupName, "Windows brugergruppe", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(x => x.Credentials.WindowsUserGroupName, (SelectList)ViewBag.UserGroup, new { @class = "form-control" })
                            <span class="help-block">Vælg windows brugergruppe. For FTP adgang, vælg "FTPUsers"</span>

                            @Html.ValidationMessageFor(model => model.Credentials.WindowsUserGroupName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Credentials.DisablePasswordChange, "", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                           
                            
                                    @Html.CheckBoxFor(x => x.Credentials.DisablePasswordChange) Må ikke skifte password
                              
                                @Html.ValidationMessageFor(model => model.Credentials.DisablePasswordChange, "", new { @class = "text-danger" })
                            </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Credentials.PasswordNeverExpires, "", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                           
                                    @Html.CheckBoxFor(x => x.Credentials.PasswordNeverExpires) Password udløber aldrig
                               
                            @Html.ValidationMessageFor(model => model.Credentials.DisablePasswordChange, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>




    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>