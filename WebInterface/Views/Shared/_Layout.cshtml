<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - User Helper Webgui</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/material")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Placeholder", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Hjem", "Index", "Home")</li>
                    @if (User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Hold", "Index", "ServerTeam")</li>
                        <li>@Html.ActionLink("Brugere", "Index", "ServerUser")</li>
                        <li>@Html.ActionLink("Vis alle websystem brugere", "ShowAllUsers", "Manage")</li>
                    }
                    else if (User.IsInRole("User"))
                    {
                        <li><a href="#">BrugerMenu</a></li>
                    }
                   
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - rh</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/material")
    @Scripts.Render("~/bundles/custom")


    <script>
            $(document).ready(function() {
                $.material.init();
            });
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
